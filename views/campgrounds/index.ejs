<%- include("../partials/header") %>


<div class="container-fluid px-4">
	<header class ="jumbotron py-2">
		<div class="container px-0 text-center">
			<h1 class="display-4 font-weight-bolder text-center pt-4">
			Welcome To YelpCamp. 
			</h1>
			<h1 class="display-4 "><i class="fas fa-campground"></i></h1>
			<!-- <p class="h6 pt-5 pl-0">
				View some of our hand-picked campgrounds
			</p> -->
			<p>
				<a class="btn btn-primary btn-md mt-5 pb-2" href="/campgrounds/new">Find Your Next Adventure!</a>
			</p>
		</div>
	</header>

	<div class="map-box">
		<div id="map"></div>						
	</div>
	
	<div class="row text-center">
		<div class="card-deck campcards">
			<% campgrounds.forEach((campground) => { %>
					<div class="card mb-3 mx-4 p-2 campcard">
						<div class="image">
							<img src="<%=campground.image%>" class="card-img-top" alt="<%=campground.name%>">
						</div>
						<div class="card-body">
							<h4 class="card-title"><%=campground.name%></h4>
							<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
							<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary btn-lg">More Info</a>
						</div>
					</div>			
				<% }); %>
		</div>		
	</div>

</div>
		<script>
			mapToken = "<%-process.env.MAPBOX_API_1%>";
		</script>
		<script src="/js/map.js"></script>
		<%- include("../partials/footer") %>