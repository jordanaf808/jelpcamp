<div class="container">
<!-- since our flash warning is always displayed our 'if' statement relies on whether
there is any content in the 'error' or not. if so display, if not, dont display. -->
	<% if(error && error.length > 0){ %>
	<div class="alert alert-danger" role="alert">
	<h4><%= error %></h4>
	</div>
	<% } %>
	<% if(success && success.length > 0){ %>
	<div class="alert alert-success" role="alert">
	<h4><%= success %></h4>
	</div>
	<% } %>
</div>



		
		